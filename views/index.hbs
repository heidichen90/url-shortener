<div class="card" style="width: 18rem;">

  <div class="card-header">
    <h5 class="card-title">URL Shortner</h5>
    <span class="text-primary" style="font-size: 100px;">
      <i class="fas fa-link"></i>
    </span>
  </div>

  {{#if shortenUrl}}
    <div class="card">
      <div class="card-body">
        <div class="card-content mx-auto">
          <h5 class="text-success">Success! Please use this link:</h5>
          <a id="shortenUrl" href="/{{shortenUrl}}" class="card-link">
            {{protocol}}://{{currentUrl}}/{{shortenUrl}}
          </a>
          <button
            onclick="copyUrl()"
            type="button"
            class="btn btn-primary mt-2 card-button"
          >
            Copy
          </button>
        </div>
      </div>
    </div>

  {{else}}
    <div class="card-body">
      <form
        method="POST"
        action="/"
        class="card-content needs-validation mx-auto"
        novalidate
      >
        <div class="form-group">
          <label for="URL" class="col-form-label">Please insert the URL:</label>
          <input
            type="url"
            name="inputUrl"
            id="URL"
            class="form-control"
            required
            placeholder="http://www.google.com"
          />
          <div class="invalid-feedback">
            Invalid URL
          </div>
        </div>
        <button type="submit" class="btn btn-primary card-button">Shorten URL</button>
      </form>
    </div>
  {{/if}}

</div>